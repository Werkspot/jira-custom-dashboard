<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <style type="text/css">
                html {
                    border: 0;
                    color: #fff;
                    font-family: Arial, Helvetica, sans-serif;
                    height: 95%;
                    margin: 0;
                    padding: 0;
                }
                body {
                    background-color: black;
                    border: 0px;
                    height: 100%;
                    margin: 0;
                    padding: 0;
                }
                .widget-row {
                    height: 100%;
                    margin: auto;
                    padding: 0;
                }
                .widget-container {
                    border: 1px solid blue;
                    display: inline-block;
                    height: 50%;
                    margin: 15px;
                    vertical-align: top;
                    width: 31%;
                }
                .widget-big-number {
                    margin: 0;
                    padding: 0;
                    font-size: 3.5em;
                }
                .widget-module-box {
                    border: 1px solid #fff;
                    margin: 10px;
                    padding: 8px;
                }
                .widget-container form {
                    font-size: 15px;
                }
                .widget-container form label {
                    display: block;
                    margin: 10px 0;
                }
                .widget-container button {
                    background-color:#fff;
                    border-radius:2px;
                    border: none;
                    display:inline-block;
                    cursor:pointer;
                    color:#666;
                    font-size: 18px;
                    font-weight: 600;
                    padding:6px 24px;
                    text-decoration:none;
                    margin: 10px 6px 6px 0;
                }
                .widget-container button:hover {
                    color: #333;
                }
                .widget-container select {
                    border-radius: 2px;
                }
                .widget-module-box h3 {
                    margin: 8px;
                }
            </style>
        {% endblock %}
    </head>
    <body>
        <div class="widget-row">
            <div class="widget-container">
                {{ render(controller('Werkspot\\JiraDashboard\\SprintWidget\\Infrastructure\\Symfony\\Controller\\SprintWidgetController')) }}
            </div>
            <div class="widget-container">
                {{ render(controller('Werkspot\\JiraDashboard\\ConfidenceWidget\\Infrastructure\\Symfony\\Controller\\ConfidenceWidgetController')) }}
            </div>
            <div class="widget-container">
                {{ render(controller('Werkspot\\JiraDashboard\\AchievedSprintsWidget\\Infrastructure\\Symfony\\Controller\\AchievedSprintsWidgetController')) }}
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
