<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Werkspot\JiraDashboard\SharedKernel\Domain\Model\Sprint\Sprint" table="sprints">
        <id
                name="id"
                column="id"
                type="Id"
        />
        <field
                name="name"
                type="text"
        />
        <field
                name="title"
                type="ShortText"
        />
        <field
                name="startDate"
                type="datetime_immutable"
        />
        <field
                name="endDate"
                type="datetime_immutable"
        />
        <field
                name="number"
                type="AbsoluteNumber"
        />
        <many-to-one
                field="team"
                target-entity="Werkspot\JiraDashboard\SharedKernel\Domain\Model\Team\Team"
                inversed-by="sprints">
            <join-column nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>